pipeline {
    agent any

    parameters {
        choice(name: 'BRANCH', choices: ['dev','prod'], description: 'Select the branch to build & deploy')
    }

    environment {
        VENV = 'venv'
        SECRET_KEY = "${SECRET_KEY_SSH_DO}"
        SSH_HOST = "${SSH_HOST_IP_ADDRESS}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Setup virtual environment') {
            steps {
                sh 'python3 -m venv venv'
                sh '. venv/bin/activate'
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    sh "chmod -R 777 ${env.WORKSPACE}"
                    sh '. venv/bin/activate && pip install -r requirements.txt && pip install flask_cors && pip install jwt && pip install pytest'
                }
            }
        }

        stage('Run unittests') {
            steps {
                script {
                    sh '''
                    export PYTHONPATH="$WORKSPACE/code-and-docs-x00174641:$PYTHONPATH"
                    . venv/bin/activate
                    pytest -W ignore::DeprecationWarning
                    '''
                }
            }
        }
        stage('Build WebApp') {
            steps {
                script {
                    sh '''
                    cd client
                    npm install
                    npm run build
                    '''
                }
            }
        }
        stage('Install sshpass') {
            steps {
                script {
                    sh 'sudo -S apt-get update -y < /dev/null'
                    sh 'echo "password" | sudo -S apt-get install -y sshpass < /dev/null'
                }
            }
        }
        stage('SSH into DO Droplet') {
            steps {
                script {
                    sshCommand = "sshpass -p ${env.SECRET_KEY} ssh root@${env.SSH_HOST} 'ls -l'"
                    sh sshCommand
                }
            }
        }
    }
}
