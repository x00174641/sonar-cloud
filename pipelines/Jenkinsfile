pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Code Linting') {
            steps {
                sh "pwd && pylint --rcfile=./pylint.rc app/"
            }
        }
    }
    post {
        success {
            echo 'Success. Linting Passed.'
        }
        failure {
            echo 'Error in linting'
        }
    }
}
