pipeline {
    agent any

    environment {
        VENV = 'venv'
        PYTHONPATH = '/root/code-and-docs-x00174641'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Setup virtual environment') {
            steps {
                sh 'python3 -m venv venv'
                sh '. venv/bin/activate'
            }
        }

        stage('Set PYTHONPATH') {
            steps {
                sh 'export PYTHONPATH="$PYTHONPATH"'
            }
        }

        stage('Install pytest') {
            steps {
                script {
                    sh "chmod +x -R ${env.WORKSPACE}"
                    sh '. venv/bin/activate && pip install pytest'
                }
            }
        }

        stage('Run unittests') {
            steps {
                sh "/usr/bin/env python3 -m pytest -W ignore::DeprecationWarning"
            }
        }
    }
}
