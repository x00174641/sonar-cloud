pipeline {
    agent any

    environment {
        VENV = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Setup Python Environment') {
            steps {
                script {
                    def venvExists = fileExists("${VENV}")
                    if (!venvExists) {
                        sh "python -m venv ${VENV}"
                    }
                    sh "${VENV}\\Scripts\\activate.bat"
                }
            }
        }
        stage('Code Linting') {
            steps {
                script {
                    sh "pwd"
                }
            }
        }
    }
    post {
        success {
            echo 'Success. Linting Passed.'
        }
        failure {
            echo 'Error in linting'
        }
    }
}
