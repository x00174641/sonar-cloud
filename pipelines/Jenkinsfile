pipeline {
    agent any

    environment {
        VENV = 'venv'
        PYTHON_ENV = "${env.PYTHON_ENV}"
        PIP_ENV = "${env.PIP_ENV}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Setup Python Environment') {
            steps {
                bat script: """
                    if not exist "${VENV}" (
                        "${PYTHON_ENV}" -m venv ${VENV}
                    )
                """, returnStdout: true
            }
        }
        stage('Install Pylint') {
            steps {
                bat script: """
                    call ${VENV}\\Scripts\\activate.bat
                    "${PIP_ENV}" install pylint
                    if exist "${VENV}\\Scripts\\pylint.exe" (
                        echo Pylint is installed.
                    ) else (
                        echo Pylint installation failed.
                        exit 1
                    )
                """, returnStdout: true
            }
        }
        stage('Code Linting') {
            steps {
                bat script: """
                    call ${VENV}\\Scripts\\activate.bat
                    "${VENV}\\Scripts\\pylint.exe" --rcfile=./pylint.rc app/
                """, returnStdout: true
            }
        }
    }
    post {
        success {
            echo 'Success. Linting Passed.'
        }
        failure {
            echo 'Error in linting'
        }
    }
}
