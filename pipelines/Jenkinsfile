pipeline {
    agent any

    environment {
        VENV = 'venv'
        PYTHONPATH = "${env.WORKSPACE}/code-and-docs-x00174641"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Setup virtual environment') {
            steps {
                sh 'python3 -m venv venv'
                sh '. venv/bin/activate'
            }
        }

        stage('Install pytest') {
            steps {
                script {
                    sh "chmod -R 777 ${env.WORKSPACE}"
                    sh '. venv/bin/activate && pip install pytest && pip install -r requirements.txt'
                }
            }
        }

        stage('Run unittests') {
            steps {
                script {
                    sh 'export PYTHONPATH="$PYTHONPATH"'
                    sh '. venv/bin/activate && pytest -W ignore::DeprecationWarning'
                }
            }
        }
    }
}
