pipeline {
    agent { 
    label 'linux'
    }
    tools{
        maven 'Maven'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Code Linting') {
            steps {
                sh "pip install pylint"
            }
        }
    }
    post {
        success {
            echo 'Success. Linting Passed.'
        }
        failure {
            echo 'Error in linting'
        }
    }
}
