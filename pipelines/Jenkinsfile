pipeline {
    agent any

    environment {
        VENV = 'venv'
        PYTHON_ENV = "${env.PYTHON}"
        PIP_ENV = "${env.PIP}"
    }

   stages {
        stage('Setup Virtual Environment') {
            steps {
                bat '\"${env.PYTHON_EXE}\" -m venv venv'
            }
        }
        stage('Install dependencies and Pylint') {
            steps {
                bat 'venv\\Scripts\\activate.bat && \"${env.PIP_EXE}\" install --upgrade pip && \"${env.PIP_EXE}\"  install pylint'
            }
        }
        stage('Lint with Pylint') {
            steps {
                bat 'call venv\\Scripts\\activate.bat && pylint --rcfile=./pylint.rc app/'
            }
        }
    }
    post {
        success {
            echo 'Success. Linting Passed.'
        }
        failure {
            echo 'Error in linting'
        }
    }
}
